<%= render "shared/partial" %>
<h3>スケジュール新規作成</h3>
<%= render "shared/error", obj: @schedule %>
 
    <%= form_with model: @schedule, local: true do |f| %>
      <table>
        <tr>
          <th><%= f.label :title ,"タイトル" %></th>
          <td><%= f.text_field  :title %></td>
        </tr>
 
        <tr>
          <th><%= f.label :start ,"開始日" %></th>
          <td><%= f.date_field :start %></td>
        </tr>
 
        <tr>
          <th><%= f.label :stop ,"終了日" %></th>
          <td><%= f.date_field :stop %></td>
        </tr>
 
        <tr>
          <th><%= f.label :allldate ,"終日" %></th>
          <td><%= f.check_box :alldate %>
          <br><%= label_tag :alldate, "終日の場合はチェックを入れます" %>
        　</td>
        </tr>
        
        <tr>
          <th><%= f.label :status ,"スケジュールメモ" %></th>
          <td><%= f.text_area :status %></td>
        </tr>
      </table>
 
      <div>
        <ul>
          <li><%= f.submit "スケジュールを新規登録する"%></li>
          <li><%= link_to "スケジュール一覧に戻る", :schedules %></li>
        </ul>
      </div>
<% end %>
<footer>
  <%= render "shared/footer" %>
</footer>